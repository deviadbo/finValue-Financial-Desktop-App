<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2


            Label:
                text: "Create an Account"
                size_hint: 0.35, 0.25
                pos_hint: {"x":0.3, "top":0.99}
                font_size: (root.width**2 ) / 14**4
                color: 20,30,20,50

            Label:
                text: "Name: "
                size_hint: 0.5,0.12
                pos_hint: {"x":0.16, "top":0.83}
                font_size: (root.width**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.2, 0.07
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 17**4

            Label:
                text: "Email: "
                size_hint: 0.5,0.12
                pos_hint: {"x":0.16, "top":0.83-0.13}
                font_size: (root.width**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.2, 0.07
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                text: "Password: "
                size_hint: 0.5,0.12
                pos_hint: {"x":0.16, "top":0.83-0.27}
                text: "Password: "
                font_size: (root.width**2) / 16**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.2, 0.07
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4


        Button:
            pos_hint:{"x":0.35,"y":0.25}
            size_hint: 0.35, 0.10
            text: "Submit"
            font_size: (root.width**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()
        Button:
            pos_hint:{"x":0.32,"y":0.1}
            size_hint: 0.4, 0.1
            font_size: (root.width**2)/ 16**4
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()



<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:
        Label:
            text: "Welcome to FinValue!"
            font_size: (root.width**2) / 13**4
            color: 20,30,20,50
            pos_hint: {"x": 0.3, "top": 0.95}
            size_hint: 0.35, 0.15

        Image:
            source: 'logo.png'

        Label:
            text:"Email: "
            font_size: (root.width**2) / 16**4
            pos_hint: {"x":0.15, "top":0.8}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2) / 16**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.75}
            size_hint: 0.20, 0.05

        Label:
            text:"Password: "
            font_size: (root.width**2) / 16**4
            pos_hint: {"x":0.15, "top":0.65}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.6}
            size_hint: 0.20, 0.05

        Button:
            pos_hint:{"x":0.45,"y":0.10}
            size_hint: 0.1, 0.05
            font_size: (root.width**2) / 16**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.37,"y":0.2}
            size_hint: 0.25, 0.05
            font_size: (root.width**2) / 18**4
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<MainWindow>:
    n: n
    email: email
    created:created

    FloatLayout:
        Label:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        Label:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Created: "

        Button:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"